[Unit]
Description=Admin MCP (shell-exec channel)
After=network-online.target
Wants=network-online.target

[Service]
User=melvin
Group=melvin
WorkingDirectory=/opt/admin-mcp
ExecStart=/usr/local/bin/claude mcp serve \
  --listen tcp://100.112.235.46:6201 \
  --agent ./exec-agent.js
Restart=on-failure
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target